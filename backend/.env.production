# Backend Environment Variables - Production

# Server Configuration
PORT=8080
NODE_ENV=production

# Database Configuration
DB_HOST=${AZURE_SQL_HOST}
DB_NAME=${AZURE_SQL_DATABASE}
DB_USER=${AZURE_SQL_USER}
DB_PASSWORD=${AZURE_SQL_PASSWORD}
DB_PORT=1433

# JWT Configuration (Store in Azure Key Vault)
JWT_SECRET=${KEY_VAULT_JWT_SECRET}
JWT_EXPIRES_IN=24h

# Azure Storage
AZURE_STORAGE_ACCOUNT_NAME=${STORAGE_ACCOUNT_NAME}
AZURE_STORAGE_ACCOUNT_KEY=${STORAGE_ACCOUNT_KEY}
AZURE_STORAGE_CONTAINER_NAME=attachments

# CORS - Update with your actual domain
ALLOWED_ORIGINS=https://salmon-sand-08e8bec1e.6.azurestaticapps.net,https://cloudenotes.mohitsuthar.me

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Azure Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=${APP_INSIGHTS_CONNECTION_STRING}

# Azure AD B2C (if using)
AZURE_AD_B2C_TENANT_NAME=${B2C_TENANT}
AZURE_AD_B2C_CLIENT_ID=${B2C_CLIENT_ID}
AZURE_AD_B2C_POLICY_NAME=B2C_1_SignUpSignIn
AZURE_AD_B2C_ISSUER=${B2C_ISSUER}
