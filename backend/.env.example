# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_HOST=your-server.database.windows.net
DB_NAME=saas_db
DB_USER=your_username
DB_PASSWORD=your_password
DB_PORT=1433

# Azure AD B2C Configuration
AZURE_AD_B2C_TENANT_NAME=your-tenant
AZURE_AD_B2C_CLIENT_ID=your-client-id
AZURE_AD_B2C_POLICY_NAME=B2C_1_signupsignin
AZURE_AD_B2C_ISSUER=https://your-tenant.b2clogin.com/your-tenant.onmicrosoft.com/v2.0/

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account
AZURE_STORAGE_ACCOUNT_KEY=your_storage_key
AZURE_STORAGE_CONTAINER_NAME=attachments

# JWT Configuration (for development without Azure AD B2C)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
